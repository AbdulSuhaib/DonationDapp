@model List<CampaignModel>;
@{
    ViewData["Title"] = "Donacije";
}
<div class="row" style="height:50px"></div>
<div class="row">
    <div class="col-md-6">
        <select id="campaingValue" asp-items="@(new SelectList(Model,"Address","Name"))" class="form-control" onchange="getCampaignInfo()">
            <option value="">Izaberi kampanju...</option>
        </select>
    </div>
</div>
<div class="row">
    <div id="donationInfoContainer" class="col-md-6" style="margin-top:50px;">

    </div>
</div>

<script>
    function getCampaignInfo(){
        var campaignAddress = $("#campaingValue").val();

        $.get('@Url.Action("GetCampaignInfo","Info")', { address: campaignAddress }, function (response) { 
            $("#donationInfoContainer").text = "";
            $("#donationInfoContainer").html(response);
        })
    }
</script>




