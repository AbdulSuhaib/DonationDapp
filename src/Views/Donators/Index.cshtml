@model List<CampaignModel>

<div class="row" style="height:50px"></div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>Kampanje</strong>
            </div>

            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-striped table-bordered" style="width:100%">
                            @if (Model.Count > 0)
                            {
                                <thead>
                                    <tr role="row">
                                        <th>#</th>
                                        <th>Adresa kampanje</th>
                                        <th>Naziv</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{int i = 0;}
                                    @foreach (var campaign in Model)
                                    {
                                        <tr role="row">
                                            <td>@(i += 1)</td>
                                            <td><a href="@Url.Action("Graph", "Donators" , new { address= campaign.Address })">@campaign.Address</a></td>
                                            <td>@campaign.Name</td>
                                        </tr>

                                    }
                                </tbody>

                            }
                            else
                            {
                                <div>Trenutno nema ni jedna kampanja</div>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>