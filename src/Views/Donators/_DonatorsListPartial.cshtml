@model List<DonationModel>

<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <strong>Donatori</strong>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-striped table-bordered dataTable no-footer" role="grid">

                        <thead>
                            <tr role="row">
                                <th>#</th>
                                <th>Adresa</th>
                                <th>Iznos</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int i = 0;}
                            @foreach (var donation in Model)
                            {
                            <tr role="row">
                                <td>@(i + 1)</td>
                                <td>@donation.Address</td>
                                <td>@donation.Donation</td>
                            </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>